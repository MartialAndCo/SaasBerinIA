{
  "check_interval_seconds": 60,
  "tasks_file": "data/scheduled_tasks.json",
  "log_level": "INFO",
  "timezone": "Europe/Paris",
  "prioritization": {
    "high": 1,
    "medium": 2,
    "low": 5
